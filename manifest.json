{
  "description": "Adds a page action icon to the address bar. Click the button to copy the current URL to the clipboard in markdown format: [Title](URL).",
  "manifest_version": 2,
  "name": "Copy as Markdown Link",
  "version": "1.0",
  "homepage_url": "https://github.com/Asheq/copy-as-markdown-link",

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "icons/off.svg"
  },

  "commands": {
    "copy": {
      "suggested_key": { "default": "Ctrl+Shift+Y" },
      "description": "Copy as Markdown Link"
    },
    "paste": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Paste link as new tab"
    }
  },

  "permissions": [
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "search"
  ]
}
